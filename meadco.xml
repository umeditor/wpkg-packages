<?xml version="1.0" encoding="UTF-8"?>

<packages>

<!--
  OBTAINING THE MSI
  1) Download and install the client resource kit
-->

<package
  id="meadco_scriptx"
  name="MeadCo ScriptX"
  revision="%version%-0"
  priority="10"
  reboot="false">

  <variable name="version" value="7.1.0" />

  <check type="uninstall" condition="versiongreaterorequal" path="MeadCo ScriptX (v%version%.*)" value="%version%" />

  <install cmd='msiexec /i "%SOFTWARE%\MeadCo\%version%\ScriptX.msi" %MSI%' />

  <upgrade   include='install' />
  <downgrade include='install' />

</package>

</packages>
